@model GetRequestModel
@{
    ViewData["Title"] = "Tüm Modüller";
    var uid = Model.Uid.HasValue ? Model.Uid.Value.ToString() : "";
}

@section Head{

}



<div class="row" id="app">
    <div class="col-lg-12">
       
        <div class="pt-1">
            <div class="card">

                <div class="card-body"> 
                    <div class="table-responsive mt-2">
                        <table class="table table-bordered" id="datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Modül Adı</th>
                                    <th>Controller</th>
                                    <th>Action</th>
                                    <th>Adres</th>
                                    <th>İkon</th>
                                    <th>Alt Modüller</th>
                                    <th>Parent Name</th>
                                    <th>Is Menu</th>
                                    <th>Tip</th>
                                    <th>Ekleme Tarihi</th>
                                    <th>Güncelleme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>

                               
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="parent-change-modal" tabindex="-1" role="dialog" aria-labelledby="parent-change-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content">
                <div class="modal-header" id="parent-change-modal-label" >
                    <h5 class="modal-title">Parent Change</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x">
                            <line x1="18" y1="6" x2="6" y2="18"></line>
                            <line x1="6" y1="6" x2="18" y2="18"></line>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <form v-on:submit.prevent="parentChange()">                        
                        <div class="form-group row mb-1">
                            <label class="col-sm-3 col-form-label">New Parent Uid</label>
                            <div class="col-sm-9">
                                <input type="text" v-model="module.parentUid" class="form-control" required placeholder="Parent Uid">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-light-danger mt-2 mb-2 btn-no-effect" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success mt-2 mb-2 btn-no-effect">Değiştir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        const Uid = "@uid" == "" ? null : "@uid";
    </script>
    <script src="~/views-js/module/module-all.js" type="module" defer></script>
}
