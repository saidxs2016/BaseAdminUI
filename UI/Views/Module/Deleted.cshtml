@model GetRequestModel
@{
    ViewData["Title"] = "Modül Sil";
}

@section Head{

}



<div class="row" id="app">
    <div class="col-lg-12">
       

        <div class="pt-1">
            <div class="card">

                <div class="card-body"> 
                    <div class="table-responsive mt-2">
                        <table class="table table-bordered" id="datatable-my">
                            <thead>
                                <tr>
                                    <th>Uid</th>
                                    <th>Modül Adı</th>
                                    <th>Controller</th>
                                    <th>Action</th>
                                    <th>Adres</th>
                                    <th>Parent Uid</th>
                                    <th>Parent Name</th>
                                    <th>İkon</th>
                                    <th>Is Menu</th>
                                    <th>Ekleme Tarihi</th>
                                    <th>Güncelleme Tarihi</th> 
                                </tr>
                            </thead>
                            <tbody> 
                                <tr v-for="(item, index) in modules">
                                    <td v-text="item.uid"></td>
                                    <td v-text="item.name"></td>
                                    <td v-text="item.controller"></td>
                                    <td v-text="item.action"></td>
                                    <td v-text="item.address"></td>
                                    <td v-text="item.parentUid"></td>
                                    <td v-text="item.parentModule?.name"></td>
                                    <td><i :class="item.icon"></i></td>
                                    <td v-text="item.isMenu ? 'Evet':'Hayır'"></td>
                                    <td v-text="dateFormatFull(item.addDate)"></td>
                                    <td v-text="dateFormatFull(item.updateDate)"></td> 
                                </tr>
                            </tbody> 
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
   
</div>


@section Scripts{
    <script src="~/views-js/module/module-deleted.js" type="module" defer></script>
}
